# ================================
# 环境变量配置示例
# ================================
# 使用方法：复制此文件为 .env 并填入实际值

# 环境配置
ENVIRONMENT=development  # development, staging, production

# 数据库配置
DATABASE_URL=postgresql+asyncpg://postgres:postgres123@localhost:5432/learning_platform

# 安全配置
SECRET_KEY=your-secret-key-here-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis配置
REDIS_URL=redis://localhost:6379/0

# MongoDB配置
MONGO_URL=mongodb://admin:mongo123@localhost:27017/

# CORS配置
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
ALLOWED_HOSTS=["localhost","127.0.0.1"]

# 日志配置
LOG_LEVEL=INFO

# 邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@learningplatform.com

# AI服务配置
OPENAI_API_KEY=sk-xxx
OPENAI_MODEL=gpt-4
ANTHROPIC_API_KEY=sk-ant-xxx
WENXIN_API_KEY=your-wenxin-key

# 支付配置
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
ALIPAY_APP_ID=xxx
ALIPAY_PRIVATE_KEY=xxx
WECHAT_APP_ID=xxx
WECHAT_APP_SECRET=xxx

# Docker执行器配置
DOCKER_TIMEOUT=30
DOCKER_MEMORY_LIMIT=512m
DOCKER_CPU_LIMIT=1.0

# 监控配置
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
PROMETHEUS_PORT=9090

# 文件上传配置
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_DIR=/tmp/uploads
